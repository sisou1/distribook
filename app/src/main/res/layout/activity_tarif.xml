<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- Première rangée divisée en deux parties -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CAF910"
        app:menu="@menu/menu_item">

        <ImageButton
            android:id="@+id/btnhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@null"
            android:src="@drawable/img" />

        <ImageButton
            android:id="@+id/logo_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/img_8" />

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:background="@null"
            android:src="@drawable/img_9" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <!-- Première partie de la première rangée -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center">

            <!-- Contenu de la première partie de la première rangée -->
            <!-- Ajoutez ici les vues (TextView, Button, etc.) que vous souhaitez afficher -->

            <ImageButton
                android:id="@+id/btn_retour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/baseline_arrow_circle_left_24" />
        </LinearLayout>

        <!-- Deuxième partie de la première rangée -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center">

            <!-- Contenu de la deuxième partie de la première rangée -->
            <!-- Ajoutez ici les vues (TextView, Button, etc.) que vous souhaitez afficher -->

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#CAF910"
                android:textSize="30dp"
                android:text="Nos tarifs" />
        </LinearLayout>
    </LinearLayout>

    <!-- Deuxième rangée divisée en deux parties -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <!-- Première partie de la deuxième rangée -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/rounded_border"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="top|center">

            <!-- Contenu de la première partie de la deuxième rangée -->
            <!-- Ajoutez ici les vues (TextView, Button, etc.) que vous souhaitez afficher -->

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_gravity="top|center"
                android:gravity="top|center"
                android:text="Abonnement\nclassique\n\n4,99€" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="- Emprunt d'un livre" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:text="Je m'abonne" />

        </LinearLayout>

        <!-- Deuxième partie de la deuxième rangée -->
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:gravity="top|center">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="top|center"
                android:gravity="top|center"
                android:text="Abonnement\npremium\n\n11,99€" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:text="- Emprunt de livres\n\n- Rabais sur les achats\n\n- Onglet recommandation" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Je m'abonne" />
            <!-- Contenu de la deuxième partie de la deuxième rangée -->
            <!-- Ajoutez ici les vues (TextView, Button, etc.) que vous souhaitez afficher -->

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#CAF910"
        app:menu="@menu/menu_footer">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Copyright \n DISTRI'BOOKS" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>
